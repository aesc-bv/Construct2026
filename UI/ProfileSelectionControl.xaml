<UserControl x:Class="AESCConstruct25.UI.ProfileSelectionControl"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            Width="400"
            Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AESCConstruct25;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

        <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- big title -->
            <RowDefinition Height="*"/>
            <!-- scrollable inner -->
            <RowDefinition Height="Auto"/>
            <!-- generate button -->
        </Grid.RowDefinitions>

        <!-- 1) BIG HEADER -->
        <TextBlock Grid.Row="0"
               Style="{StaticResource TitleTextStyle}"
               Text="Generate Profile"
               Width="360"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- 2) SCROLLABLE MIDDLE -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- profile selector -->
                <UniformGrid Columns="3" Rows="2" HorizontalAlignment="Center" Margin="0,0,0,10">
                    <RadioButton x:Name="RectangularProfileButton"
                       GroupName="ProfileGroup"
                       Tag="Rectangular"
                       Content="Rectangle"
                       Height="40"
                       Checked="ProfileButton_Checked"/>
                    <RadioButton x:Name="CircularProfileButton"
                       GroupName="ProfileGroup"
                       Tag="Circular"
                       Content="Circle"
                       Height="40"
                       Checked="ProfileButton_Checked"/>
                    <RadioButton x:Name="HProfileButton"
                       GroupName="ProfileGroup"
                       Tag="H"
                       Content="H"
                       Height="40"
                       Checked="ProfileButton_Checked"/>
                    <RadioButton x:Name="LProfileButton"
                       GroupName="ProfileGroup"
                       Tag="L"
                       Content="L"
                       Height="40"
                       Checked="ProfileButton_Checked"/>
                    <RadioButton x:Name="UProfileButton"
                       GroupName="ProfileGroup"
                       Tag="U"
                       Content="U"
                       Height="40"
                       Checked="ProfileButton_Checked"/>
                    <RadioButton x:Name="TProfileButton"
                       GroupName="ProfileGroup"
                       Tag="T"
                       Content="T"
                       Height="40"
                       Checked="ProfileButton_Checked"/>
                </UniformGrid>
                <UniformGrid Columns="3" HorizontalAlignment="Center" Margin="0,0,0,10" x:Name="UserProfilesGrid">

                </UniformGrid>

                <Button x:Name="LoadDXFButton"
                Content="Load DXF"
                Width="200" Height="30"
                HorizontalAlignment="Center"
                Margin="0,10"
                Click="LoadDXFButton_Click"/>

                <Button x:Name="ConvertDXFButton"
                Content="Convert DXF to profile"
                Width="200" Height="30"
                HorizontalAlignment="Center"
                Margin="0,10"
                Click="ConvertDXFButton_Click"/>

                <!-- size + hollow -->
                <Grid Name="SizeSelect" Margin="0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Select a Size:" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="SizeComboBox"
                    Grid.ColumnSpan="2"
                    Margin="0,25,0,37"
                    SelectionChanged="SizeComboBox_SelectionChanged"/>
                    <CheckBox x:Name="HollowCheckBox"
                    Content="Hollow Profile"
                    Grid.Column="0"
                    Margin="0,46,0,0"/>
                </Grid>

                <!-- dynamic fields -->
                <Grid x:Name="DynamicFieldsGrid" Margin="0,10"/>

                <!-- offset -->
                <TextBlock Text="Placement Offset:" Margin="0,10,0,5" HorizontalAlignment="Center"/>
                <UniformGrid x:Name="PlacementGrid" Columns="3" Rows="3" HorizontalAlignment="Center"
                        Width="300"
                        Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}">
                    <RadioButton x:Name="Offset_TopLeft"      Content="Top Left"    GroupName="OffsetGroup"/>
                    <RadioButton x:Name="Offset_TopCenter"    Content="Top Center"  GroupName="OffsetGroup"/>
                    <RadioButton x:Name="Offset_TopRight"     Content="Top Right"   GroupName="OffsetGroup"/>
                    <RadioButton x:Name="Offset_MiddleLeft"   Content="Mid Left"    GroupName="OffsetGroup"/>
                    <RadioButton x:Name="Offset_Center"       Content="Center"      GroupName="OffsetGroup" IsChecked="True"/>
                    <RadioButton x:Name="Offset_MiddleRight"  Content="Mid Right"   GroupName="OffsetGroup"/>
                    <RadioButton x:Name="Offset_BottomLeft"   Content="Bot Left"    GroupName="OffsetGroup"/>
                    <RadioButton x:Name="Offset_BottomCenter" Content="Bot Center"  GroupName="OffsetGroup"/>
                    <RadioButton x:Name="Offset_BottomRight"  Content="Bot Right"   GroupName="OffsetGroup"/>
                </UniformGrid>

            </StackPanel>
        </ScrollViewer>

        <!-- 3) GENERATE BUTTON -->
        <Button Grid.Row="2"
            x:Name="GenerateButton"
            Style="{StaticResource FooterButtonStyle}"
            Content="Generate Profile"
            HorizontalAlignment="Center"
            Margin="0,10"
            Click="GenerateButton_Click"/>
    </Grid>
</UserControl>
