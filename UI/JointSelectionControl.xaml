<UserControl x:Class="AESCConstruct25.UI.JointSelectionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400"
             Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AESCConstruct25;component/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- big title -->
            <RowDefinition Height="*"/>
            <!-- scrollable options -->
            <RowDefinition Height="Auto"/>
            <!-- footer buttons -->
        </Grid.RowDefinitions>

        <!-- 1) BIG HEADER -->
        <TextBlock Grid.Row="0"
               Style="{StaticResource TitleTextStyle}"
               Text="Generate Joint"
               Width="360"
               HorizontalAlignment="Center"
               Margin="0,0,0,10"/>

        <!-- 2) CONTENT -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <UniformGrid Columns="3" Margin="0,0,0,20" HorizontalAlignment="Center" Width="300"
                Height="{Binding ActualWidth, RelativeSource={RelativeSource Self}}">
                <RadioButton x:Name="MiterJoint"     Content="Miter Joint"    GroupName="JointGroup"/>
                <RadioButton x:Name="StraightJoint"  Content="Straight Joint" GroupName="JointGroup"/>
                <RadioButton x:Name="StraightJoint2" Content="Straight Joint 2" GroupName="JointGroup"/>
                <RadioButton x:Name="TJoint"         Content="T-Joint"         GroupName="JointGroup"/>
                <RadioButton x:Name="NoJoint"        Content="No Joint"        GroupName="JointGroup"/>
                <RadioButton x:Name="CutOut"         Content="Cut Out"         GroupName="JointGroup"/>
                <RadioButton x:Name="Trim"           Content="Trim"            GroupName="JointGroup"/>
            </UniformGrid>
        </ScrollViewer>

        <!-- 3) FOOTER -->
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="RestoreGeometry"
                Style="{StaticResource RestoreButtonStyle}"
                Content="Restore Geometry"
                Click="RestoreGeometry_Click"/>
                <Button x:Name="RestoreJoint"
                Style="{StaticResource RestoreButtonStyle}"
                Content="Restore Joint"
                Click="RestoreJoint_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Gap (mm)" VerticalAlignment="Center"/>
                <TextBox x:Name="Gap" Width="100" Height="30" Text="0"/>
            </StackPanel>

            <Button x:Name="GenerateJoint"
              Style="{StaticResource FooterButtonStyle}"
              Content="Execute Joint"
              HorizontalAlignment="Center"
              Click="GenerateJoint_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
