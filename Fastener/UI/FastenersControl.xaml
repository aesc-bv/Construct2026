 <UserControl x:Class="AESCConstruct25.UI.FastenersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AESCConstruct25;component/UIMain/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- 0: Get Sizes button -->
            <RowDefinition Height="Auto"/>
            <!-- 1: Bolt -->
            <RowDefinition Height="Auto"/>
            <!-- 2: Washer Top -->
            <RowDefinition Height="Auto"/>
            <!-- 3: Washer Bottom -->
            <RowDefinition Height="Auto"/>
            <!-- 4: Nut -->
            <RowDefinition Height="Auto"/>
            <!-- 5: Custom & Insert -->
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 0) Get Sizes -->
        <Button x:Name="GetSizesButton"
            Grid.Row="0"
            Content="Get Sizes"
            HorizontalAlignment="Right"
            Style="{StaticResource FooterButtonStyle}"
            Click="GetSizesButton_Click"
            Margin="0,0,0,10"/>

        <!-- Bolt Section -->
        <GroupBox Header="Bolt" Grid.Row="1" Margin="0,0,0,10" >
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Type" VerticalAlignment="Center"/>
                <ComboBox x:Name="BoltTypeCombo" Grid.Column="1"
                          ItemsSource="{Binding BoltTypeOptions}"
                          SelectedItem="{Binding SelectedBoltType}" Margin="5,0" />

                <TextBlock Text="Size" Grid.Row="1" VerticalAlignment="Center"/>
                <ComboBox x:Name="BoltSizeCombo" Grid.Row="1" Grid.Column="1"
                          ItemsSource="{Binding BoltSizeOptions}"
                          SelectedItem="{Binding SelectedBoltSize}" Margin="5,5,0,0"/>

                <TextBlock Text="Length" Grid.Row="2" VerticalAlignment="Center"/>
                <TextBox x:Name="BoltLengthTextBox" Grid.Row="2" Grid.Column="1"
                         Text="{Binding BoltLength}" Width="60" Margin="5,5,0,0"/>
            </Grid>
        </GroupBox>

        <!-- Washer Top -->
        <GroupBox Header="Washer Top" Grid.Row="2" Margin="0,0,0,10" >
            <StackPanel Margin="10">
                <CheckBox x:Name="WasherTopCheckbox"
                          IsChecked="{Binding IncludeWasherTop}" Content="Include"/>
                <UniformGrid Columns="2" Margin="0,5,0,0">
                    <TextBlock Text="Type" VerticalAlignment="Center"/>
                    <ComboBox x:Name="WasherTopTypeCombo"
                              ItemsSource="{Binding WasherTypeOptions}"
                              SelectedItem="{Binding SelectedWasherTopType}"/>
                    <TextBlock Text="Size" VerticalAlignment="Center"/>
                    <ComboBox x:Name="WasherTopSizeCombo"
                              ItemsSource="{Binding WasherSizeOptions}"
                              SelectedItem="{Binding SelectedWasherTopSize}"/>
                </UniformGrid>
            </StackPanel>
        </GroupBox>

        <!-- Washer Bottom -->
        <GroupBox Header="Washer Bottom" Grid.Row="3" Margin="0,0,0,10" >
            <StackPanel Margin="10">
                <CheckBox x:Name="WasherBottomCheckbox"
                          IsChecked="{Binding IncludeWasherBottom}" Content="Include"/>
                <UniformGrid Columns="2" Margin="0,5,0,0">
                    <TextBlock Text="Type" VerticalAlignment="Center"/>
                    <ComboBox x:Name="WasherBottomTypeCombo"
                              ItemsSource="{Binding WasherTypeOptions}"
                              SelectedItem="{Binding SelectedWasherBottomType}"/>
                    <TextBlock Text="Size" VerticalAlignment="Center"/>
                    <ComboBox x:Name="WasherBottomSizeCombo"
                              ItemsSource="{Binding WasherSizeOptions}"
                              SelectedItem="{Binding SelectedWasherBottomSize}"/>
                </UniformGrid>
            </StackPanel>
        </GroupBox>

        <!-- Nut -->
        <GroupBox Header="Nut" Grid.Row="4" Margin="0,0,0,10" >
            <StackPanel Margin="10">
                <CheckBox x:Name="NutCheckbox"
                          IsChecked="{Binding IncludeNut}" Content="Include"/>
                <UniformGrid Columns="2" Margin="0,5,0,0">
                    <TextBlock Text="Type" VerticalAlignment="Center"/>
                    <ComboBox x:Name="NutTypeCombo"
                              ItemsSource="{Binding NutTypeOptions}"
                              SelectedItem="{Binding SelectedNutType}"/>
                    <TextBlock Text="Size" VerticalAlignment="Center"/>
                    <ComboBox x:Name="NutSizeCombo"
                              ItemsSource="{Binding NutSizeOptions}"
                              SelectedItem="{Binding SelectedNutSize}"/>
                </UniformGrid>
            </StackPanel>
        </GroupBox>

        <!-- Custom & Insert -->
        <StackPanel Grid.Row="5" Margin="0,10,0,0">
            <UniformGrid Columns="3" VerticalAlignment="Center">
                <CheckBox x:Name="CustomCheckbox" IsChecked="{Binding UseCustomPart}" Content="Use custom part" />
                <TextBlock Text="File" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                <ComboBox x:Name="CustomFileCombo"
                          ItemsSource="{Binding CustomFileOptions}"
                          SelectedItem="{Binding SelectedCustomFile}"
                          IsEnabled="{Binding UseCustomPart}"/>
            </UniformGrid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Distance" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <TextBox x:Name="DistanceTextBox" Width="60" Text="{Binding DistanceMm}" />
                <CheckBox x:Name="LockDistanceCheckbox" Content="Lock" IsChecked="{Binding LockDistance}" Margin="10,0,0,0"/>
                <Button x:Name="InsertButton" Style="{StaticResource FooterButtonStyle}"
                        Content="Insert" Width="80" Margin="20,0,0,0"
                        Click="InsertButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>