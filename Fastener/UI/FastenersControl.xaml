<UserControl x:Class="AESCConstruct2026.UI.FastenersControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300"
             Height="740"
             Background="White">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AESCConstruct2026;component/UIMain/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <!-- 0: Get Sizes button -->
                <RowDefinition Height="Auto" />
                <!-- 1: Bolt -->
                <RowDefinition Height="Auto" />
                <!-- 2: Washer Top -->
                <RowDefinition Height="Auto" />
                <!-- 3: Washer Bottom -->
                <RowDefinition Height="Auto" />
                <!-- 4: Nut -->
                <RowDefinition Height="Auto" />
                <!-- 5: Custom & Insert -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 0) Get Sizes -->
            <Button x:Name="GetSizesButton"
                    Tag="GetSizes"
                    Grid.Row="0"
                    Content="Get Sizes"
                    HorizontalAlignment="Right"
                    Style="{StaticResource FooterButtonStyle}"
                    Click="GetSizesButton_Click"
                    Margin="0,0,0,10" />

            <TextBlock Grid.Row="1"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="Bolt"
                       Text="Bolt"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0" />
            <!-- Bolt Section -->
            <StackPanel x:Name="BoltGroup"
                        Tag="grpFastenersBolt"
                        Grid.Row="2"
                        Margin="0,0,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <!-- now a Grid with same columns & margins as BoltGroup -->
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Tag="lblFasteners_Type"
                                   Text="Name"
                                   VerticalAlignment="Center" />
                        <ComboBox x:Name="BoltTypeCombo"
                                  Grid.Column="1"
                                  Tag="FastenersText"
                                  ItemsSource="{Binding BoltTypeOptions}"
                                  SelectedItem="{Binding SelectedBoltType}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />

                        <TextBlock Tag="lblFasteners_Size"
                                   Grid.Row="1"
                                   Text="Size"
                                   VerticalAlignment="Center" />
                        <ComboBox x:Name="BoltSizeCombo"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  Tag="FastenersToolTip"
                                  ItemsSource="{Binding BoltSizeOptions}"
                                  SelectedItem="{Binding SelectedBoltSize}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />

                        <TextBlock Tag="lblFasteners_Bolt_Length"
                                   Grid.Row="2"
                                   Text="Length"
                                   VerticalAlignment="Center" />
                        <TextBox x:Name="BoltLengthTextBox"
                             HorizontalAlignment="Left"
                             Grid.Row="2"
                             Grid.Column="1"
                             Tag="FastenersToolTip"
                             Text="{Binding BoltLength}"
                             Width="60"
                                 Margin="5,5,0,0" />
                    </Grid>
                    <Image Grid.Row="0"
                        Grid.Column="1"
                        x:Name="BoltImage"
                        Stretch="Uniform"
                        Height="70"
                        Margin="15,0,0,0" />
            </Grid>
        </StackPanel>

        <TextBlock Grid.Row="3"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="WasherTop"
                       Text="Washer Top"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0" />
            <!-- Washer Top -->
            <StackPanel x:Name="WasherTopGroup"
                        Tag="grpFastenersWasherTop"
                        Grid.Row="4"
                        Margin="0,0,0,0">
                <CheckBox x:Name="WasherTopCheckbox"
                          Tag="chkFastenersInclude"
                          IsChecked="{Binding IncludeWasherTop}"
                          Content="Include" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <!-- now a Grid with same columns & margins as BoltGroup -->
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Tag="lblFasteners_Type"
                                   Text="Name"
                                   VerticalAlignment="Center"
                                   Grid.Row="0"
                                   Grid.Column="0" />
                        <ComboBox x:Name="WasherTopTypeCombo"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  ItemsSource="{Binding WasherTopTypeOptions}"
                                  SelectedItem="{Binding SelectedWasherTopType}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />

                        <TextBlock Tag="lblFasteners_Size"
                                   Text="Size"
                                   VerticalAlignment="Center"
                                   Grid.Row="1"
                                   Grid.Column="0" />
                        <ComboBox x:Name="WasherTopSizeCombo"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  ItemsSource="{Binding WasherTopSizeOptions}"
                                  SelectedItem="{Binding SelectedWasherTopSize}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />
                    </Grid>
                    <Image Grid.Row="0"
                           Grid.Column="1"
                           x:Name="WasherTopImage"
                           Stretch="Uniform"
                           Height="70"
                           Margin="15,0,0,0" />
                </Grid>
            </StackPanel>

            <TextBlock Grid.Row="5"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="WasherBottom"
                       Text="Washer Bottom"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0" />
            <!-- Washer Bottom -->
            <StackPanel x:Name="WasherBottomGroup"
                        Tag="grpFastenersWahserBottom"
                        Grid.Row="6"
                        Margin="0,0,0,0">
                <CheckBox x:Name="WasherBottomCheckbox"
                          Tag="chkFastenersInclude"
                          IsChecked="{Binding IncludeWasherBottom}"
                          Content="Include" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <!-- now a Grid with same columns & margins as BoltGroup -->
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Tag="lblFasteners_Type"
                                   Text="Name"
                                   VerticalAlignment="Center"
                                   Grid.Row="0"
                                   Grid.Column="0" />
                        <ComboBox x:Name="WasherBottomTypeCombo"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  ItemsSource="{Binding WasherBottomTypeOptions}"
                                  SelectedItem="{Binding SelectedWasherBottomType}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />

                        <TextBlock Tag="lblFasteners_Size"
                                   Text="Size"
                                   VerticalAlignment="Center"
                                   Grid.Row="1"
                                   Grid.Column="0" />
                        <ComboBox x:Name="WasherBottomSizeCombo"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  ItemsSource="{Binding WasherBottomSizeOptions}"
                                  SelectedItem="{Binding SelectedWasherBottomSize}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />
                    </Grid>
                    <Image Grid.Row="0"
                           Grid.Column="1"
                           x:Name="WasherBottomImage"
                           Stretch="Uniform"
                           Height="70"
                           Margin="15,0,0,0" />
                </Grid>
            </StackPanel>

            <TextBlock Grid.Row="7"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="Nut"
                       Text="Nut"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0" />
            <!-- Nut -->
            <StackPanel x:Name="NutGroup"
                        Tag="grpFastenersNut"
                        Grid.Row="8"
                        Margin="0,0,0,0">
                <CheckBox x:Name="NutCheckbox"
                          Tag="chkFastenersInclude"
                          IsChecked="{Binding IncludeNut}"
                          Content="Include" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    <!-- now a Grid with same columns & margins as BoltGroup -->
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>

                        <TextBlock Tag="lblFasteners_Type"
                                   Text="Name"
                                   VerticalAlignment="Center"
                                   Grid.Row="0"
                                   Grid.Column="0" />
                        <ComboBox x:Name="NutTypeCombo"
                                  Grid.Row="0"
                                  Grid.Column="1"
                                  ItemsSource="{Binding NutTypeOptions}"
                                  SelectedItem="{Binding SelectedNutType}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />

                        <TextBlock Tag="lblFasteners_Size"
                                   Text="Size"
                                   VerticalAlignment="Center"
                                   Grid.Row="1"
                                   Grid.Column="0" />
                        <ComboBox x:Name="NutSizeCombo"
                                  Grid.Row="1"
                                  Grid.Column="1"
                                  ItemsSource="{Binding NutSizeOptions}"
                                  SelectedItem="{Binding SelectedNutSize}"
                                  Margin="5,5,0,0"
                                  Style="{StaticResource ComboBoxFlatStyle}" />
                    </Grid>
                    <Image Grid.Row="0"
                           Grid.Column="1"
                           x:Name="NutImage"
                           Stretch="Uniform"
                           Height="70"
                           Margin="15,0,0,0" />
                </Grid>
            </StackPanel>

            <Separator Grid.Row="9"
                       Margin="0,0,0,0" />

            <!-- Custom & Insert -->
            <StackPanel Grid.Row="10"
                        Margin="0,10,0,0">
                <Grid VerticalAlignment="Center"
                      Margin="10,0,10,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Tag="lblFasteners_Custom_File"
                               Text="File"
                               VerticalAlignment="Center"
                               HorizontalAlignment="Right"
                               Grid.Column="0" />
                    <ComboBox x:Name="CustomFileCombo"
                              Tag="lblFasteners_Custom_File"
                              ItemsSource="{Binding CustomFileOptions}"
                              SelectedItem="{Binding SelectedCustomFile, Mode=TwoWay}"
                              IsEnabled="{Binding UseCustomPart}"
                              Style="{StaticResource ComboBoxFlatStyle}"
                              Grid.Column="1" />
                </Grid>
                <Grid VerticalAlignment="Center"
                      Margin="10,0,10,0">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <CheckBox x:Name="CustomCheckbox"
                              Tag="grpFastenersCustom"
                              IsChecked="{Binding UseCustomPart, Mode=TwoWay}"
                              Content="Use custom part"
                              Grid.Row="0"
                              VerticalAlignment="Center" />
                    <Button Content="Browse"
                            Tag="BrowseCustomButtonFstnr"
                            Click="BrowseCustomButton_Click"
                            Style="{StaticResource FooterButtonStyle}"
                            IsEnabled="{Binding UseCustomPart}"
                            Grid.Row="1"
                            HorizontalAlignment="Left" />
                </Grid>
                <Separator Margin="0,5,0,5" />

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,0">
                    <TextBlock Tag="lblFasteners_Distance"
                               Text="Distance"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0" />
                    <TextBox x:Name="DistanceTextBox"
                             Tag="lblFasteners_Distance"
                             Width="60"
                             Text="{Binding DistanceMm}" />
                    <CheckBox Content="Clamping distance"
                              Tag="lblFasteners_overwriteDist"
                              x:Name="lblFasteners_overwriteDist"
                              IsChecked="{Binding OverwriteDistance}"
                              Margin="5,0,0,0"
                              VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            Margin="0,0,0,0">
                    <CheckBox x:Name="LockDistanceCheckbox"
                              Tag="chkFastenersLock"
                              Content="Lock"
                              IsChecked="{Binding LockDistance}"
                              Margin="10,0,0,0"
                              VerticalAlignment="Center" />
                    <Button x:Name="InsertButton"
                            Tag="btnFastenersInsert"
                            Style="{StaticResource FooterButtonStyle}"
                            Content="Insert"
                            Width="80"
                            Margin="20,0,0,0"
                            Click="InsertButton_Click" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
