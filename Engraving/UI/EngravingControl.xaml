<UserControl x:Class="AESCConstruct25.UI.EngravingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300"
             Height="450"
             Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/AESCConstruct25;component/UIMain/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- main section -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <!-- bottom buttons -->
            </Grid.RowDefinitions>

            <!-- Main options -->
            <TextBlock Grid.Row="0"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="Engraving"
                       Text="Engraving"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0" />

            <StackPanel Grid.Row="1"
                        Margin="0,10,0,0">
                <!-- Radio choices -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <RadioButton Style="{x:Null}"
                                 x:Name="RadioComponentName"
                                 Tag="RadioComponentName"
                                 Content="Component Name"
                                 GroupName="NoteSource"
                                 IsChecked="{Binding UseComponentName}"
                                 Margin="0,0,0,4"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Grid.Column="0"
                                 Grid.Row="0"/>
                    <StackPanel />
                    <RadioButton Style="{x:Null}"
                                 x:Name="RadioBodyName"
                                 Tag="RadioBodyName"
                                 Content="Body Name"
                                 GroupName="NoteSource"
                                 IsChecked="{Binding UseBodyName}"
                                 Margin="0,0,0,4"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 Grid.Column="0"
                                 Grid.Row="1" />
                    <StackPanel />
                    <RadioButton Style="{x:Null}"
                                 x:Name="RadioCustom"
                                 Tag="RadioCustom"
                                 Content="Custom"
                                 GroupName="NoteSource"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Center"
                                 IsChecked="{Binding UseCustomText}"
                                 Grid.Column="0"
                                 Grid.Row="2" />
                    <TextBox Text="{Binding CustomText}"
                             Margin="0,0,0,0"
                             IsEnabled="{Binding IsChecked, ElementName=RadioCustom}"
                             Grid.Column="1"
                             Grid.Row="2" />
                </Grid>

                <!-- Engraving / CutOut -->
                <UniformGrid Columns="2"
                            Margin="0,10,0,0">
                    <CheckBox x:Name="EngravingCheckBox"
                              Tag="EngravingCheckBox"
                              Content="Engraving"
                              IsChecked="{Binding Engraving}"
                              Margin="0"
                              VerticalAlignment="Center" />
                    <CheckBox x:Name="CutOutCheckBox"
                              Tag="CutOutCheckBox"
                              Content="CutOut"
                              IsChecked="{Binding CutOut}"
                              Margin="0"
                              VerticalAlignment="Center" />
                </UniformGrid>

                <!-- Font selector -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Font"
                               Tag="FontText"
                               VerticalAlignment="Center"
                               Grid.Column="0" />
                    <ComboBox x:Name="FontComboBox"
                              Margin="0"
                              Grid.Column="1"
                              ItemsSource="{Binding FontOptions}"
                              SelectedItem="{Binding SelectedFont}"
                              Style="{StaticResource ComboBoxFlatStyle}" />
                </Grid>

                <!-- Size -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="125" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <TextBlock Text="Size"
                               Tag="EngravingSizeText"
                               VerticalAlignment="Center"
                               Margin="0,0,5,0"
                              Grid.Column="0" />
                    <TextBox x:Name="SizeTextBox"
                             Grid.Column="1"
                             Margin="0"
                             Text="{Binding Size}" />
                </Grid>

                <!-- Center -->
                <CheckBox x:Name="CenterCheckBox"
                          Tag="CenterCheckBox"
                          Content="Center"
                          IsChecked="{Binding Center}"
                          Margin="0,10,0,0" />

                <Button x:Name="AddNoteButton"
                        Tag="AddNoteButton"
                        Style="{StaticResource FooterButtonStyle}"
                        Content="Create"
                        HorizontalAlignment="Left"
                        Margin="0,10,0,10"
                        Width="140"
                        Click="AddNoteButton_Click" />
            </StackPanel>

            <Separator Grid.Row="2"
                       Margin="0,10,0,0" />

            <TextBlock Grid.Row="3"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="Imprint"
                       Text="Imprint"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0" />
            <!-- Bottom buttons -->
            <StackPanel Grid.Row="4"
                        Margin="0,10,0,0">
                <Button x:Name="ImprintBodyButton"
                        Width="140"
                        Tag="ImprintBodyButton"
                        Style="{StaticResource FooterButtonStyle}"
                        Content="Imprint Body"
                        Click="ImprintBodyButton_Click" />
                <Button x:Name="ImprintLinesButton"
                        Width="140"
                        Tag="ImprintLinesButton"
                        Style="{StaticResource FooterButtonStyle}"
                        Content="Imprint Lines"
                        Click="ImprintLinesButton_Click" />
                <Button x:Name="ImprintToEngravingButton"
                        Tag="ImprintToEngravingButton"
                        Width="140"
                        Style="{StaticResource FooterButtonStyle}"
                        Content="Imprint to Engraving"
                        Click="ImprintToEngravingButton_Click" />
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
