<UserControl x:Class="AESCConstruct25.UI.PlatesControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="400" Background="White"
             xmlns:local="clr-namespace:AESCConstruct25.UI">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AESCConstruct25;component/UIMain/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/> <!-- Header row: section title (optional) -->
            <RowDefinition Height="Auto"/> <!-- Top inputs -->
            <RowDefinition Height="*"/>    <!-- Drawing area -->
            <RowDefinition Height="Auto"/> <!-- Parameter inputs -->
            <RowDefinition Height="Auto"/> <!-- Create button -->
        </Grid.RowDefinitions>

        <!-- 1) Top selectors -->
        <UniformGrid Grid.Row="1" Columns="4" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="Profile" Margin="0,0,0,2"/>
                <ComboBox ItemsSource="{Binding ProfileTypes}"
                  SelectedItem="{Binding SelectedProfileType}"
                  Width="100"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Size" Margin="0,0,0,2"/>
                <ComboBox ItemsSource="{Binding ProfileSizes}"
                  SelectedItem="{Binding SelectedProfileSize}"
                  Width="100"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Angle" Margin="0,0,0,2"/>
                <TextBox Text="{Binding Angle}" Width="40"/>
            </StackPanel>
            <StackPanel/>
        </UniformGrid>

        <!-- 2) Illustration -->
        <Border Grid.Row="2" BorderBrush="LightGray" BorderThickness="1" Padding="5" Margin="0,0,0,10">
            <Grid>
                <!-- Replace with your diagram image or vector drawing -->
                <Image Source="/AESCConstruct25;component/UIMain/Images/squareGrid.jpg"
               Stretch="Uniform"/>
                <!-- Overlay labels (L1, L2, B1, B2, D, R, T, #) can be drawn here or part of the image -->
            </Grid>
        </Border>

        <!-- 3) Parameter inputs -->
        <UniformGrid Grid.Row="3" Columns="6" Rows="2" Margin="0,0,0,10" HorizontalAlignment="Center">
            <!-- Row 1 labels -->
            <TextBlock Text="L1" HorizontalAlignment="Center"/>
            <TextBlock Text="L2" HorizontalAlignment="Center"/>
            <TextBlock Text="#"  HorizontalAlignment="Center"/>
            <TextBlock Text="B1" HorizontalAlignment="Center"/>
            <TextBlock Text="B2" HorizontalAlignment="Center"/>
            <TextBlock Text="#"  HorizontalAlignment="Center"/>

            <!-- Row 2 controls -->
            <TextBox Text="{Binding L1}" Width="50" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding L2}" Width="50" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Count1}" Width="30" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding B1}" Width="50" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding B2}" Width="50" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Count2}" Width="30" HorizontalAlignment="Center"/>

            <!-- Row 3 labels -->
            <TextBlock Text="D" HorizontalAlignment="Center"/>
            <TextBlock Text="T" HorizontalAlignment="Center"/>
            <TextBlock Text="R" HorizontalAlignment="Center"/>
            <TextBlock/>
            <TextBlock/>
            <TextBlock/>

            <!-- Row 4 controls -->
            <TextBox Text="{Binding HoleDiameter}" Width="50" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding Thickness}"  Width="50" HorizontalAlignment="Center"/>
            <TextBox Text="{Binding FilletRadius}" Width="50" HorizontalAlignment="Center"/>
            <TextBlock/>
            <TextBlock/>
            <TextBlock/>
        </UniformGrid>

        <!-- 4) Create button -->
        <Button Grid.Row="4"
            Content="Create"
            Style="{StaticResource FooterButtonStyle}"
            Width="100"
            HorizontalAlignment="Left"
            Click="CreateButton_Click" Margin="228,5,0,5"/>
    </Grid>
</UserControl>
