<UserControl x:Class="AESCConstruct25.UI.CustomComponentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="300"
             Height="430"
             Background="White">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AESCConstruct25;component/UIMain/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <!-- Template selector -->
                <RowDefinition Height="Auto" />
                <!-- Document Properties -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <!-- Component Properties -->
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="Select TemplateHeader"
                       Text="Select Template"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,0" />
            <!-- 1) Select Template Header="Select Template" -->
            <StackPanel Grid.Row="1">
                <StackPanel Margin="0">
                    <ComboBox x:Name="TemplateComboBox"
                              ItemsSource="{Binding TemplateOptions}"
                              SelectedItem="{Binding SelectedTemplate}"
                              Style="{StaticResource ComboBoxFlatStyle}"
                              Width="250" />
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Row="2"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="DocumentPropertiesHeader"
                       Text="Document Properties"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0" />
            <!-- 2) Document Properties Header="Document Properties" -->
            <StackPanel Grid.Row="3"
                        Margin="0,0,0,0">
                <StackPanel Margin="10">
                    <Button x:Name="AddDocPropsButton"
                            Tag="AddDocPropsButton"
                            Style="{StaticResource FooterButtonStyle}"
                            Content="Add properties"
                            Click="AddDocPropsButton_Click"
                            Width="180" />
                    <Button x:Name="DeleteDocPropsButton"
                            Tag="DeleteDocPropsButton"
                            Style="{StaticResource FooterButtonStyle}"
                            Content="Delete properties"
                            Click="DeleteDocPropsButton_Click"
                            Width="180" />
                </StackPanel>
            </StackPanel>

            <TextBlock Grid.Row="4"
                       Style="{StaticResource TitleTextStyle}"
                       Tag="ComponentPropertiesHeader"
                       Text="Component Properties"
                       Width="230"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,0" />

            <!-- 3) Component Properties Header="Component Properties"-->
            <StackPanel Grid.Row="5"
                        Margin="0,0,0,0">
                <StackPanel Margin="10">
                    <Button x:Name="AddToSelectionButton"
                            Tag="AddToSelectionButton"
                            Style="{StaticResource FooterButtonStyle}"
                            Content="Add to Selection"
                            Click="AddToSelectionButton_Click"
                            Width="180" />
                    <Button x:Name="DeleteFromSelectionButton"
                            Tag="DeleteFromSelectionButton"
                            Style="{StaticResource FooterButtonStyle}"
                            Content="Delete from Selection"
                            Click="DeleteFromSelectionButton_Click"
                            Width="180" />
                    <Button x:Name="AddToAllButton"
                            Tag="AddToAllButton"
                            Style="{StaticResource FooterButtonStyle}"
                            Content="Add to All"
                            Click="AddToAllButton_Click"
                            Width="180" />
                    <Button x:Name="DeleteFromAllButton"
                            Tag="DeleteFromAllButton"
                            Style="{StaticResource FooterButtonStyle}"
                            Content="Delete from All"
                            Click="DeleteFromAllButton_Click"
                            Width="180" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</UserControl>
